@{
    ViewData["Title"] = $"{Model.Details.Base.Name} Kurs Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        #hero_in.courses:before {
            background: url(@Model.Details.Medias.Where(x => x.MediaType == NitelikliBilisim.Core.Enums.EducationMediaType.Banner).FirstOrDefault().FileUrl) center center no-repeat;
        }
    </style>

    <link href="~/css/pages/course/desktop-details.css" rel="stylesheet" />
    <link href="~/css/pages/course/mobile-details.css" rel="stylesheet" />
    <link href="~/css/pages/course/temp-details.css" rel="stylesheet" />
}

@{
    var hours = Model.Details.Base.DaysNumeric * Model.Details.Base.HoursPerDayNumeric;
}

<main>
    <section id="hero_in" class="courses">
        <div class="wrapper">
            <div class="container" style="display: none !important">
                <input type="hidden" value="@Model.Details.Base.Id" id="_education-id" />
                <input type="hidden" value="@Model.Group.Host.Latitude" id="_host-latitude" />
                <input type="hidden" value="@Model.Group.Host.Longitude" id="_host-longitude" />
                <h1 class="fadeInUp"><span></span>@Model.Details.Base.Name</h1>
            </div>
        </div>
    </section>

    <div class="bg_color_1">
        <nav class="secondary_nav sticky_horizontal">
            <div class="container">
                <ul class="clearfix">
                    <li><a href="#description" class="active">Grup Bilgisi</a></li>
                    <li><a href="#lessons">Eğitim İçeriği</a></li>
                    <li><a href="#teachers">Eğitmenler</a></li>
                    <li><a href="#reviews">Yorumlar</a></li>
                </ul>
            </div>
        </nav>
        <div class="container margin_60_35">
            <div class="row">
                <div class="col-lg-8">

                    <section id="description">

                        <div>
                            <span>Bu eğitim için birden fazla eğitim grubu vardır. Lütfen size uygun olan grubu seçiniz.</span>
                        </div>
                        <div class="group-selector-container">
                            <select id="select-groups">
                                <option value="0">İstanbul (Wissen Akademie)</option>
                                <option value="1">İstanbul (Bahçeşehir Üniversitesi)</option>
                                <option value="2">Ankara (Wissen Akademie)</option>
                            </select>
                        </div>
                        <h3><span></span>@Model.Details.Base.Name</h3>
                        <p>@Model.Details.Base.Description</p>
                        <h5>Ne öğreneceksiniz?</h5>
                        <ul class="list_ok">
                            @foreach (var item in Model.Details.Gains)
                            {
                                <li>@item.Gain</li>
                            }
                        </ul>
                        <hr>
                        @if (!string.IsNullOrWhiteSpace(Model.Details.Base.Description2))
                        {
                            <p>@Model.Details.Base.Description2</p>
                        }
                    </section>

                    @* EĞİTİM PARÇALARI *@
                    <section id="lessons">
                        <div class="intro_title">
                            <div class="row">
                                <div class="col-md-9 col-sm-6"><h5>Dersler</h5></div>
                                <div class="col-md-3 col-sm-6">
                                    <ul>
                                        <li>@Model.Details.Base.DaysText gün</li>
                                        <li>@hours saat</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div id="accordion_lessons" role="tablist" class="add_bottom_45">
                            @{
                                var count = 1;
                            }
                            @foreach (var part in Model.Details.Parts)
                            {
                                <div class="card">
                                    <div class="card-header" role="tab" id="heading_@count">
                                        <h5 class="mb-0">
                                            @{
                                                var icon = count != 1 ? "ti-plus" : "ti-minus";
                                            }
                                            <a data-toggle="collapse" href="#collapse_@count" aria-expanded="true" aria-controls="collapse_@count"><i class="indicator @icon"></i> @part.Title</a>
                                        </h5>
                                    </div>
                                    @{
                                        var show = count != 1 ? "" : "show";
                                    }
                                    <div id="collapse_@count" class="collapse @show" role="tabpanel" aria-labelledby="heading_@count" data-parent="#accordion_lessons">
                                        <div class="card-body">
                                            <div class="list_lessons">
                                                <ul>
                                                    @foreach (var item in part.SubParts)
                                                    {
                                                        <li><a class="txt_doc">@item.Title</a><span></span></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                count++;
                            }
                        </div>
                    </section>

                    @* EĞİTMENLER *@
                    <section id="teachers">
                        <div class="intro_title">
                            <h5>Eğitmenler</h5>
                        </div>
                        <p>Bu dersi veren, alanında uzman eğitmenlerimizi tanıyın!</p>
                        <div class="row add_top_20 add_bottom_30">
                            <div class="col-lg-6">
                                <ul class="list_teachers">
                                    @foreach (var educator in Model.Educators)
                                    {
                                        <li>
                                            <a href="/egitmen-profili/@educator.EducatorId">
                                                <figure><img src="@educator.ProfilePhoto" alt=""></figure>
                                                <h5 style="color: #2d2f33 !important">@educator.Name @educator.Surname</h5>
                                                <p>@educator.Title</p><i class="pe-7s-angle-right-circle"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
