@model NitelikliBilisim.Core.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = "Kaydol";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Nitelikli Bilişim eğitim platformu">
    <meta name="author" content="wissentech">
    <title>Nitelikli Bilişim | Kaydol</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="img/apple-touch-icon-144x144-precomposed.png">

    <!-- BASE CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/vendors.css" rel="stylesheet">
    <link href="/assets/css/all_icons.min.css" rel="stylesheet">

    <!-- YOUR CUSTOM CSS -->
    <link href="/css/custom.css" rel="stylesheet">

</head>

<body id="register_bg">

    <nav id="menu" class="fake_menu"></nav>

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->

    <div id="login">
        <aside>
            <figure>
                <a href="index.html"><img src="/img/logo.png" width="149" height="42" data-retina="true" alt=""></a>
            </figure>
            <form autocomplete="off" asp-controller="account" asp-action="register" method="post">
                <div class="form-group">

                    <span class="input">
                        <input class="input_field" type="text" name="Name">
                        <label class="input_label">
                            <span class="input__label-content">İsim</span>
                        </label>
                    </span>

                    <span class="input">
                        <input class="input_field" type="text" name="Surname">
                        <label class="input_label">
                            <span class="input__label-content">Soyisim</span>
                        </label>
                    </span>

                    <span class="input">
                        <input class="input_field" type="email" name="Email">
                        <label class="input_label">
                            <span class="input__label-content">E-Posta</span>
                        </label>
                    </span>

                    <span class="input">
                        <input class="input_field" type="password" id="password1" name="Password">
                        <label class="input_label">
                            <span class="input__label-content">Şifre</span>
                        </label>
                    </span>

                    <span class="input">
                        <input class="input_field" type="password" id="password2" name="ConfirmPassword">
                        <label class="input_label">
                            <span class="input__label-content">Şifre Onay</span>
                        </label>
                    </span>

                    <div id="pass-info" class="clearfix"></div>
                </div>
                <button type="submit" class="btn_1 rounded full-width add_top_30">Kayıt Ol</button>
                <div class="text-center add_top_10">Zaten hesabınız var mı? <strong><a href="/account/login">Giriş yap</a></strong></div>
            </form>
            <div class="copy">© @DateTime.Now.Year Nitelikli Bilişim</div>
        </aside>
    </div>
    <!-- /login -->
    <!-- COMMON SCRIPTS -->
    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="/assets/js/common_scripts.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/validate.js"></script>

    <!-- SPECIFIC SCRIPTS -->
    <script src="~/assets/js/pw_strenght.js"></script>

</body>
</html>