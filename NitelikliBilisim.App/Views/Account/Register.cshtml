@model NitelikliBilisim.Core.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <h2>Kayıt Ol</h2>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Ad</label>
                    <input type="text" asp-for="Name" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Soyad</label>
                    <input type="text" asp-for="Surname" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kayıt Ol" class="btn btn-info"/>
                </div>
            </form>
        </div>
    </div>
</div>