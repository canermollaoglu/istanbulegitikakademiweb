@model NitelikliBilisim.Core.ViewModels.Account.LoginViewModel

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Udema a modern educational site template">
    <meta name="author" content="Ansonika">
    <title>UDEMA | Modern Educational site template</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="img/apple-touch-icon-144x144-precomposed.png">

    <!-- BASE CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/style_overwritten.css" rel="stylesheet" />
    <link href="/assets/css/vendors.css" rel="stylesheet">
    <link href="/assets/css/all_icons.min.css" rel="stylesheet">

    <!-- YOUR CUSTOM CSS -->
    <link href="/css/custom.css" rel="stylesheet">

</head>

<body id="login_bg">

    <nav id="menu" class="fake_menu"></nav>

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->

    <div id="login">
        <aside>
            <figure>
                <a href="/"><img src="~/assets/img/nb_logo_sm.png" width="149" height="42" data-retina="true" alt=""></a>
            </figure>
            <form action="giris-yap" method="post" enctype="application/x-www-form-urlencoded" id="form-login">
                <div class="access_social">
                    <a href="#0" class="social_bt facebook">Facebook ile giriş yap</a>
                    <a href="#0" class="social_bt google">Google ile giriş yap</a>
                    <a href="#0" class="social_bt linkedin">Linkedin ile giriş yap</a>
                </div>
                <div class="divider"><span>ya da</span></div>
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.AntiForgeryToken()
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="form-group">
                    <span class="input">
                        <input class="input_field" type="text" autocomplete="off" name="UserName">
                        <label class="input_label">
                            <span class="input__label-content">Kullanıcı Adı</span>
                        </label>
                    </span>

                    <span class="input">
                        <input class="input_field" type="password" autocomplete="new-password" name="Password">
                        <label class="input_label">
                            <span class="input__label-content">Şifre</span>
                        </label>
                    </span>
                    <small><a href="#0">Şifrenizi mi unuttunuz?</a></small>
                </div>
                <input type="submit" value="Giriş Yap" class="btn_1 rounded full-width add_top_40" id="btn-submit" />
                @*<button type="submit" class="btn_1 rounded full-width add_top_60">Giriş Yap</button>*@
                <div class="text-center add_top_10">Nitelikli Bilişim'de yeni misiniz? 
                @*<strong><a href="/kayit-ol">Kaydolun!</a></strong>*@
                </div>
            <a href="/kayit-ol" class="btn_1 rounded full-width add_top_10">Kaydolun</a>
            </form>
            <div class="copy">© @DateTime.Now.Year Nitelikli Bilişim</div>
        </aside>
    </div>
    <!-- /login -->
    <!-- COMMON SCRIPTS -->
    <script src="~/assets/js/jquery-2.2.4.min.js"></script>
    <script src="~/assets/js/common_scripts.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/validate.js"></script>
    <script src="~/js/lib/security-support.js"></script>
</body>
</html>
