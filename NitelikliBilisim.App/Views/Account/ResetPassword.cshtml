@model NitelikliBilisim.Core.ViewModels.Account.ResetPasswordViewModel 
<!DOCTYPE html>
<html lang="tr" class="h-100-percent">

<head>
    <title>Şifre Sıfırlama - Nitelikli Bilişim</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <partial name="partials/_BaseAssetsHeader" />
</head>

<body class="h-100-percent">
    <partial name="partials/_header-simple" />
    <section class="default-centered d-c-h-auto">
        <div class="container">
            <div class="default-centered__wrp">
                <div class="forget-password__top">
                    <div class="forget-password__title">
                        YENİ ŞİFRE <span>BELİRLEYİN</span>
                    </div>
                    <div class="forget-password__txt">
                        Şifreniz en az 6 karakter olmalı, harf ve rakam içermelidir.
                    </div>
                </div>
                <form id="validateForm" asp-controller="Account" asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />
                    <div>
                        <div asp-validation-summary="All"></div>
                        <div class="input__outer">
                            <span class="icon-outer input__icon">
                                <svg class="icon">
                                    <use xlink:href="../../assets/img/icons.svg#icon-lock"></use>
                                </svg>
                            </span>
                            <input asp-for="Password" type="password" class="input input--fw" placeholder="Yeni Şifre Girin"
                                   required>
                        </div>
                        <div class="input__outer">
                            <span class="icon-outer input__icon">
                                <svg class="icon">
                                    <use xlink:href="../../assets/img/icons.svg#icon-lock"></use>
                                </svg>
                            </span>
                            <input asp-for="ConfirmPassword" type="password" class="input input--fw" placeholder="Yeni Şifre Tekrar"
                                   required>
                        </div>
                        <button type="submit" class="button button-fw">
                            Şifre Belirle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <partial name="partials/_footer-copyright" />
</body>

</html>
