<div class="subheader subheader--for-you">
    <div class="subheader__wrp">
        <div class="container">
            <div class="subheader__cnt">
                <div class="subheader__txt-cnt">
                    <div class="subheader__title">@Model.EducationCategory</div>
                    <div class="subheader__txt">
                        Şuanda eğitiminizin <strong>@(Model.EducationWeek). haftasındasınız,</strong> eğitiminizin tamamlanmasına <strong>
                            @(Model.LeftWeeks)
                            hafta
                        </strong> kalmıştır.
                    </div>
                </div>
                <div class="for-you__course-buttons">
                    <div class="for-you__course-btn">
                        <span class="icon-outer">
                            <svg class="icon">
                                <use xlink:href="../../assets/img/icons.svg#icon-date"></use>
                            </svg>
                        </span>
                        <div class="for-you__course-cnt">
                            <div class="for-you__course-txt">Kurs Başlangıcı</div>
                            <div class="for-you__course-date">@Model.NbuyStartDate</div>
                        </div>
                    </div>
                    <span class="icon-outer for-you__course-icon">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-arrow"></use>
                        </svg>
                    </span>
                    <div class="for-you__course-btn">
                        <span class="icon-outer">
                            <svg class="icon">
                                <use xlink:href="../../assets/img/icons.svg#icon-flag"></use>
                            </svg>
                        </span>
                        <div class="for-you__course-cnt">
                            <div class="for-you__course-txt">Kurs Bitişi</div>
                            <div class="for-you__course-date">@Model.NbuyEndDate</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="for-you__slider">
                <div class="swiper-container js-for-you-slider">
                    <div class="swiper-wrapper">
                        @for (int i = 0; i < Model.EducationMonths.Count(); i++)
                        {
                            <div class="swiper-slide for-you__week">
                                <div class="for-you__week-outer">
                                    <div class="for-you__week-wrp">
                                        @for (int j = 0; j < Model.EducationMonths[i].Weeks.Count(); j++)
                                        {
                                            <a href="#week@(Model.EducationMonths[i].Weeks[j].Order)" class="for-you__week-item tooltip-hover @(Model.EducationMonths[i].Weeks[j].IsCurrentWeek?"active":"")">
                                                <div class="for-you__week-item-txt">
                                                    Hafta
                                                </div>
                                                <div class="for-you__week-item-num js-tooltip-take-el">
                                                    @(Model.EducationMonths[i].Weeks[j].Order)
                                                </div>
                                            </a>
                                        }
                                    </div>
                                    <div class="for-you__week-line">
                                        <div class="for-you__week-line-left">
                                        </div>
                                        <div class="for-you__week-line-lined"></div>
                                        <div class="for-you__week-line-center">
                                            @(Model.EducationMonths[i].Order). AY
                                            <svg class="icon loader">
                                                <use xlink:href="../../assets/img/icons.svg#icon-loader"></use>
                                            </svg>
                                            <svg class="icon check">
                                                <use xlink:href="../../assets/img/icons.svg#icon-check-circle"></use>
                                            </svg>
                                            <svg class="icon rotate">
                                                <use xlink:href="../../assets/img/icons.svg#icon-rotate"></use>
                                            </svg>
                                        </div>
                                        <div class="for-you__week-line-lined"></div>
                                        <div class="for-you__week-line-right"></div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                    <!-- Add Arrows -->
