@section postScripts{
    <script type="text/javascript">
        var currentCategoryId = $("#current-category-id");
        var currentPage = $("#current-page");
        var currentHostCity = $("#current-host-city");
        var currentOrder = $("#current-order");
        var lessonsContent = $(".lesson-list__items");
        var paginationContent = $(".pagination");
        var swiper = new Swiper('.js-for-you-card-slider', {
            keyboard: true,
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.js-for-you-card-slider .swiper-button-next',
                prevEl: '.js-for-you-card-slider .swiper-button-prev',
            },
            slidesPerView: 3,
            spaceBetween: 30,
            speed: 650,
            grabCursor: false,
            breakpoints: {
                // when window width is >= 640px
                1026: {
                    slidesPerView: 3,
                },
                768: {
                    slidesPerView: 2.3,
                },
                576: {
                    slidesPerView: 1.1,
                },
                320: {
                    slidesPerView: 1.1,
                    spaceBetween: 15,
                },
            },
        });

        $(function () {
            var jsTakeWeek = $('.for-you__week-item.active')
                .find('.for-you__week-item-num')
                .text();
            $('.js-take-week').text(jsTakeWeek);
            loadSuggestedEducations(jsTakeWeek);
            loadEducations();
        });

        function loadSuggestedEducations(week) {
            $.ajax({
                url: `/haftaya-ozel-kurslar`,
                method: "post",
                data: {
                    week: week,
                },
                success: (res) => {
                    $.each(res.data, function (index, e) {
                        swiper.appendSlide([
                        `  <div class="swiper-slide">
                    <div class="card">
                        <figure>
                            <img src="${e.medias[0].fileUrl}" alt="">
                        </figure>

                        <div class="card__content">
                            <h6 class="card__subtitle">${e.base.categoryName}</h6>
                            <h5 class="card__title">${e.base.name}</h5>
                            <p>
                                Bu eğitim; şirketiniz için yeterlde kullanılan ve ileri düzeyde hassas dalatar olarak tanımlanan
                            </p>
                        </div>

                        <div class="card__footer">
                            <span class="card__time">
                                <span class="icon-outer">
                                    <svg class="icon">
                                        <use xlink:href="../../assets/img/icons.svg#icon-clock"></use>
                                    </svg>
                                </span>
                                <span>3 gün ( 12 saat )</span>
                            </span>

                            <span class="card__money">
                                <a href="#0" class="button button-fw">
                                    <div class="button-txt"> İncele </div>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>` ]);
                    });
                }
            });
        }

        $('.for-you__week-item').click(function () {
            var jsTakeWeekSelected = $(this)
                .find('.for-you__week-item-num')
                .text();
            $('.js-take-week').text(jsTakeWeekSelected);
            swiper.removeAllSlides();
            loadSuggestedEducations(jsTakeWeekSelected);
        });
        $(".js-index-location-select").change(function () {
            currentHostCity.val($("#hostCitySelect").val());
            loadEducations();
        });
        $(".js-level-select").change(function () {
            currentOrder.val($("#orderType").val());
            loadEducations();
        });
        function loadEducations() {
            $.ajax({
                url: `/get-courses`,
                method: "post",
                data: {
                    categoryId: currentCategoryId.val(),
                    hostCity: currentHostCity.val(),
                    page: currentPage.val(),
                    order: currentOrder.val(),
                },
                success: (res) => {
                    lessonsContent.html("");
                    $.each(res.data.educations, function (index, e) {
                        var education = `<a href="/${e.cSeo}/${e.seo}" class="lesson-list__item">
                                                <div class="lesson-list__item-img">
                                                    <img src="${e.imagePath}" alt="">
                                                </div>
                                                <div class="lesson-list__item-cnt">
                                                    <div class="lesson-list__item-left">
                                                        <div class="lesson-list__item-title">
                                                            ${e.name}
                                                        </div>
                                                        <div class="lesson-list__item-txt">
                                                            ${e.description}
                                                        </div>
                                                    </div>
                                                    <div class="lesson-list__item-right">
                                                        <div class="lesson-list__item-date">
                                                            <span class="icon-outer">
                                                                <svg class="icon">
                                                                    <use xlink:href="../../assets/img/icons.svg#icon-clock"></use>
                                                                </svg>
                                                            </span>
                                                            ${e.educationDays} gün ( ${e.educationHours} saat )
                                                        </div>
                                                        <div class="lesson-list__item-price">
                                                            <button class="button button-fw">
                                                                 <div class="button-txt"> İncele </div>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>`;
                        lessonsContent.append(education);
                    });

                    paginationContent.html("");
                    var prev = `<a class="pagination__item prev" onclick=changePage('${res.data.pageIndex - 1}')>
                                    <span class="icon-outer">
                                        <svg class="icon">
                                            <use xlink:href="../../assets/img/icons.svg#icon-small-arrow"></use>
                                        </svg>
                                    </span>
                                </a>`;
                    var next = `<a class="pagination__item next" onclick=changePage('${res.data.pageIndex + 1}')>
                                    <span class="icon-outer">
                                        <svg class="icon">
                                            <use xlink:href="../../assets/img/icons.svg#icon-small-arrow"></use>
                                        </svg>
                                    </span>
                                </a>`;
                    if (res.data.pageIndex > 1) {
                        paginationContent.append(prev);
                    }
                    for (var i = 1; i <= res.data.totalPageCount; i++) {

                        var page = `<a onclick="changePage('${i}')" class="pagination__item ${i == res.data.pageIndex ? 'active' : ''}" >${i}</a>`;
                        paginationContent.append(page);
                    }
                    if (res.data.pageIndex < res.data.totalPageCount) {
                        paginationContent.append(next);
                    }

                }
            });
        }

        $('body').on('click', '.js-location-mobile .sort-mobile__item', function () {
            var locationId = $(this).data("id");
            var sortMobileText = $(this).text();
            $('.js-open-location-mobile .js-select-mobile-change').text(sortMobileText);
            currentHostCity.val(locationId);
            loadEducations();
        });
        $('body').on('click', '.js-sort-mobile .sort-mobile__item', function () {
            var orderTypeId = $(this).data("id");
            var sortMobileText = $(this).text();
            $('.js-open-sort-mobile .js-select-mobile-change').text(sortMobileText);
            currentOrder.val(orderTypeId);
            loadEducations();
        });

        function changePage(page) {
            currentPage.val(page);
            loadEducations();
        }


        //SLİDER
        
        

    </script>
}