@using Microsoft.AspNetCore.Identity
@using NitelikliBilisim.Core.Entities
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div id="userDropdown" class="user-dropdown">
    @if (User.Identity.IsAuthenticated)
    {
        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        var user = await UserManager.FindByIdAsync(userId);
        <div class="user-dropdown__top">
            <div class="user-dropdown__name">
                @user.Name @user.Surname
            </div>
            <div class="user-dropdown__mail">
                @user.Email
            </div>
        </div>
    }
    <div class="user-dropdown__list">
        <a asp-controller="UserProfile" asp-action="Profile" class="user-dropdown__item">
            <span class="icon-outer button-icon">
                <svg class="icon">
                    <use xlink:href="../../assets/img/icons.svg#icon-home"></use>
                </svg>
            </span>
            Panelim
        </a>
        <a asp-controller="UserProfile" asp-action="MyCourses" class="user-dropdown__item">
            <span class="icon-outer button-icon">
                <svg class="icon">
                    <use xlink:href="../../assets/img/icons.svg#icon-code-c"></use>
                </svg>
            </span>
            Kurslarım
        </a>
        <a asp-controller="UserProfile" asp-action="AccountSettings" class="user-dropdown__item">
            <span class="icon-outer button-icon">
                <svg class="icon">
                    <use xlink:href="../../assets/img/icons.svg#icon-settings"></use>
                </svg>
            </span>
            Hesap Ayarları
        </a>
    </div>
    <div class="user-dropdown__footer">
        <a asp-controller="Account" asp-action="Logout" class="button button-fw button-icon-left">
            <span class="icon-outer button-icon">
                <svg class="icon">
                    <use xlink:href="../../assets/img/icons.svg#icon-logout"></use>
                </svg>
            </span>
            <span class="button-txt">Çıkış Yap</span>
        </a>
    </div>
</div>
<div id="miniBasket" class="mini-basket">
    <div class="mini-basket__top">
        <div class="title title--small">
            SEPETTEKİ
            <span class="title--blue">ÜRÜNLERİM</span>
        </div>
        <div class="mini-basket__count">2 Ürün</div>
    </div>
    <div class="mini-basket__cnt">

    </div>
    <div class="mini-basket__footer">
        <a asp-controller="Sale" asp-action="Cart" class="button button-fw button-icon-right">
            <span class="button-txt">Alışverişi Tamamla</span>
            <span class="icon-outer button-icon">
                <svg class="icon">
                    <use xlink:href="../../assets/img/icons.svg#icon-arrow"></use>
                </svg>
            </span>
        </a>
    </div>
</div>
<header class="headerWrap">
    <div class="container">
        <div class="header">
            <div class="header__inner">
                <a asp-controller="Home" asp-action="Index" class="header__brand">
                    <img src="~/assets/img/nitelikli-bilisim_logo.svg" alt="Nitelikli Bilişim Logo" height="35" />
                </a>
                <div class='education-overlay overlay js-close-modal'></div>
                <span class="header__education js-open-education">
                    <span class="icon-outer header__education-icon">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-dots"></use>
                        </svg>
                    </span>
                    <span>Eğitimler</span>
                </span>

                 @await Component.InvokeAsync("HeaderEducationsMenu")

                <nav class="header__links">
                    <li>
                        <a href="#0" class="js-modal-trigger" data-trigger="egitimSihirbazi">Eğitim Sihirbazı</a>
                    </li>
                    <li id="TumSayfalar" class="header__dropdown">
                        <a href="javascript:void(0)">
                            <span>Kurumsal</span>
                        </a>
                        <ul>
                            <a asp-controller="Home" asp-action="AboutUs">Hakkımızda</a>
                            <a asp-controller="Home" asp-action="FrequentlyAskedQuestions">Sıkça Sorulan Sorular</a>
                            <a asp-controller="Home" asp-action="Contact">İletişim</a>
                            <a asp-controller="Home" asp-action="EducatorApplication">Eğitmen Başvurusu</a>
                            <a asp-controller="Home" asp-action="NonDisclosureAgreement">Gizlilik Sözleşmesi</a>
                            <a asp-controller="Blog" asp-action="List">Blog Listeleme</a>
                            <a asp-controller="Home" asp-action="UserComments">Kullanıcı Yorumları</a>
                            <a asp-controller="Course" asp-action="List">Eğitim Listeleme</a>
                            <a asp-controller="UserProfile" asp-action="ForYou">Sana Özel</a>

                        </ul>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="CorporateMembershipApplication">Kurumsal Üyelik Talebi</a>
                    </li>
                </nav>

                <nav class="header__right-side">
                    <div class='header-overlay overlay js-close-modal'></div>


                    @if (User.Identity.IsAuthenticated)
                    {
                        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                        var user = await UserManager.FindByIdAsync(userId);
                        var profileImage = "";
                        try
                        {
                            if (User.IsInRole("Educator"))
                            {

                                profileImage = StorageService.BlobUrl+user.AvatarPath;
                            }
                            else if (User.IsInRole("User"))
                            {
                                profileImage = StorageService.BlobUrl+user.AvatarPath;
                            }
                        }
                        catch
                        {
                        }
                        if (string.IsNullOrEmpty(profileImage))
                        {
                            profileImage = "../../img/nb_letter_logo_sm.png";
                                
                        }

                        <!-- giriş yapılmış -->
                        <div class="header__profile-btn js-open-user-dropdown">
                            <div class="header__profile-img">
                                <img src="@profileImage" alt="">
                                <div class="header__profile-caret"></div>
                            </div>
                            <div class="header__profile-cnt">
                                <div class="header__profile-txt">Hoşgeldiniz</div>
                                <div class="header__profile-name">@user.Name @user.Surname</div>
                            </div>
                        </div>
                        <a asp-controller="UserProfile" asp-action="ForYou" class="button header__register-button">
                            <span class="icon-outer button-icon">
                                <svg class="icon">
                                    <use xlink:href="../../assets/img/icons.svg#icon-star-s"></use>
                                </svg>
                            </span>
                            <span>Sana Özel</span>
                        </a>
                        <!-- giriş yapılmış -->
                    }
                    else
                    {
                        <!-- giriş yapılmamış -->
                        <a asp-controller="Account" asp-action="Login" class="button button--ghost header__login-button">
                            <span class="icon-outer button-icon">
                                <svg class="icon">
                                    <use xlink:href="../../assets/img/icons.svg#icon-lock"></use>
                                </svg>
                            </span>
                            <span>Giriş Yap</span>
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="button header__register-button">
                            <span class="icon-outer button-icon">
                                <svg class="icon">
                                    <use xlink:href="../../assets/img/icons.svg#icon-user"></use>
                                </svg>
                            </span>
                            <span>Üye Ol</span>
                        </a>
                        <!-- giriş yapılmamış -->
                    }

                    <a class="header__hamper js-open-mini-basket">
                        <span class="icon-outer icon-basket">
                            <svg class="icon">
                                <use xlink:href="../../assets/img/icons.svg#icon-basket"></use>
                            </svg>
                        </span>
                        <!-- <span class="header__count">3</span> -->
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>

<header class="header-mobile">

    <div class="container">
        <div class="header-mobile__wrp">
            <div class="header-mobile__dots js-open-mobile-menu">
                <span class="icon-outer header-mobile__dots-open">
                    <svg class="icon">
                        <use xlink:href="../../assets/img/icons.svg#icon-dots"></use>
                    </svg>
                </span>
                <span class="icon-outer header-mobile__dots-close">
                    <svg class="icon">
                        <use xlink:href="../../assets/img/icons.svg#icon-circle-close-c"></use>
                    </svg>
                </span>
            </div>
            <a asp-controller="Home" asp-action="Index" class="header-mobile__logo">
                <img src="~/assets/img/nitelikli-bilisim_logo.svg" class="logolight" alt="Nitelikli Bilişim Logo" height="35" />
                <img src="~/assets/img/nitelikli-bilisim_logo-dark.svg" class="logodark" alt="Nitelikli bilişim logo" height="35">
            </a>
            <div class="header-mobile__right">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="UserProfile" asp-action="MyMenu" class="header-mobile__right-btn">
                        <span class="icon-outer">
                            <svg class="icon">
                                <use xlink:href="../../assets/img/icons.svg#icon-user"></use>
                            </svg>
                        </span>
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="header-mobile__right-btn">
                        <span class="icon-outer">
                            <svg class="icon">
                                <use xlink:href="../../assets/img/icons.svg#icon-user"></use>
                            </svg>
                        </span>
                    </a>
                }
                <div class="header-mobile__right-btn js-open-mini-basket">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-basket"></use>
                        </svg>
                    </span>
                </div>
            </div>
        </div>
                    @await Component.InvokeAsync("MobileHeaderEducationsMenu")
       
    </div>

</header>
<div class='header-overlay overlay js-close-modal header-overlay--mobile'></div>