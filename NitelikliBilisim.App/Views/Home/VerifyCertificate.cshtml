@model NitelikliBilisim.Core.ViewModels.Main.VerifyCertificateVm

<!DOCTYPE html>
<html lang="tr" class="h-100-percent">

<head>
    <title>Sertifika Doğrulama - Nitelikli Bilişim</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <partial name="partials/_BaseAssetsHeader" />
</head>

<body class="h-100-percent">
    <partial name="partials/_header-simple" />
    <section class="default-centered">
        <div class="container">
            <div class="default-centered__wrp">
                <div class="forget-password__top">
                    <div class="forget-password__title">
                        <span>Sertifika Doğrulama</span>
                    </div>
                    <div class="forget-password__txt">
                        @if (Model == null)
                        {
                            <p>Sertifika bulunamadı!</p>
                        }
                        else
                        {
                            <text>
                                <b>@Model.StudentName</b>,<br />
                                @Model.StartDate - @Model.EndDate tarihlerinde gerçekleşen<br />
                                <b>"@Model.EducationName (@Model.TotalHours saat)"</b> <br />
                                adlı eğitimi başarıyla tamamlamıştır.

                            </text>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <partial name="partials/_footer-copyright" />
</body>

</html>



