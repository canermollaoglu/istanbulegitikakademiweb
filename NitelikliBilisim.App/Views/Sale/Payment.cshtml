                .fadeOut(300, function () {
                    $(this).remove();
                });
            // $(this).parent().find().fadeOut(100, function () {
            // 	$(this).remove();
            // });
            localStorage.setItem("promotionCode", "");
            inputPromotionDiscountAmount.val(0);
            calculateTotalPrice();
            $('.js-cupon-form')
                .find('.wizard-loading')
                .show();
            $('.js-cupon-form').removeClass('result');
        });
