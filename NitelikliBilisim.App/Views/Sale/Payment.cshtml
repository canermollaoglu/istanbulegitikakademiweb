            if (!$('#form-buy').isValid())
                return;
            btnBuy.off("click");
            var tokenVerifier = new SecuritySupport.TokenVerifier();
            var cart = new CartSupport.Cart();
            var cartItemsSt = cart.getItems();
            var data = tokenVerifier.addToken("form-buy", {
                Use3d: chc3dSecure.prop("checked"),
                CardInfo: {
                    NameOnCard: inputOwner.val(),
                    NumberOnCard: inputCardNumber.val(),
                    MonthOnCard: selectMonths.val(),
                    YearOnCard: selectYears.val(),
                    CVC: inputCvc.val()
                },
                PaymentInfo: {
                    Installments: inputInstallment.val()
                },
                CartItems: cartItemsSt,
                PromotionCode: _promotionCode.val(),
                AddressId: aId.val(),
                CartItemsJson: cartItems.val(),
                IsDistantSalesAgreementConfirmed:mss
            });
            console.log(data);

            $.ajax({
                url: "/pay",
                method: "post",
                data: data,
                success: (res) => {
                    console.log(res);
                },
                complete: () => { btnBuy.on("click", btnBuy_onClick); }
            });
        }
        function resizeAccordionContent() {
            var accordionContent = $('.accordion__item.selected')
                .find('.js-calc-accordion-height')
                .height();
            $('.accordion__item.selected ')
                .find('.accordion__content')
                .css('height', accordionContent + 20);
            var accordionContentCart = $('.accordion__item.selected-cart')
                .find('.js-calc-accordion-height')
                .height();
            $('.accordion__item.selected-cart ')
                .find('.accordion__content')
                .css('height', accordionContentCart + 20);
        }
