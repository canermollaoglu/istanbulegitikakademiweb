        $('#input-card-number').focusout(function () {
            var inputVal = this.value;
            if (inputVal.length > 7) {
                loadInstallmentsInfo(inputVal);
            }
        });
        function loadInstallmentsInfo(inputVal) {
            var cart = new CartSupport.Cart();
            var data = {
                CardNumber: inputVal,
                CartItems: cart.getItems(),
                PromotionCode: _promotionCode.val()
            };

            $.ajax({
                url: "/getinstallmentinfo",
                method: "post",
                data: data,
                success: (res) => {
                    if (res.isSuccess) {
                        console.log(res);
                        installmentInfoDiv.empty();
                        createInstallmentsDiv(res.data);
                        if (res.data.installmentOptions.force3Ds == "1") {
                            chc3dSecure.prop("checked", true);
                            chc3dSecure.prop('disabled', true);
                        } else {
                            chc3dSecure.prop("checked", false);
                            chc3dSecure.prop('disabled', false);
                        }
                        $("input[name='purchase']").on('change', function () {
                            installmentNumber_onChange();
                        });
                    }
                }
            });
        }
        function installmentNumber_onChange() {
            var retVal = $("input[name='purchase']:checked").val();
            inputInstallment.val(retVal);
        }
        function createInstallmentsDiv(data) {
            var content = '';
            if (data.length != 0)
                $.each(data.installmentOptions.installmentPrices, function (index, info) {
                    if (info.installmentNumber == 1) {
                        content += `<label class="main-radio">
                                                        <div class="checkout__purchase-item">
                                                            <div>
                                                                Peşin
                                                            </div>
                                                            <div>
                                                                <span>₺</span> ${info.price}
                                                            </div>
                                                            <div>
                                                                <span>₺</span> ${info.totalPrice}
                                                            </div>
                                                        </div>
                                                        <input type="radio" value="${info.installmentNumber}" checked="checked" name="purchase">
                                                        <span class="main-radio__checkmark"></span>
                                                    </label>`;
                    } else {
                        content += `<label class="main-radio">
                                                        <div class="checkout__purchase-item">
                                                            <div>
                                                                ${info.installmentNumber} Taksit
                                                            </div>
                                                            <div>
                                                                <span>₺</span> ${info.price}
                                                            </div>
                                                            <div>
                                                                <span>₺</span> ${info.totalPrice}
                                                            </div>
                                                        </div>
                                                        <input type="radio" value="${info.installmentNumber}" name="purchase">
                                                        <span class="main-radio__checkmark"></span>
                                                    </label>`;
                    }
                });
            installmentInfoDiv.append(content);
            resizeAccordionContent();
            inputInstallment.val(1);
        }

