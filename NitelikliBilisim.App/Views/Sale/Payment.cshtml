@section postScripts{
    <script src="~/js/lib/security-support.js"></script>
    <script src="~/assets/js/jquery.payform.min.js"></script>
    <script src="~/assets/js/jquery.mask.min.js"></script>
    <script src="~/js/pages/sale-payment.js"></script>
}