@model NitelikliBilisim.Core.ViewModels.areas.admin.blog.blogpost.BlogPostGetVM
@{
    ViewData["Title"] = "Yazı Önizleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/assets/css/main.css" rel="stylesheet" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Yazı Önizleme</h2>
      </div>
    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-12">

            <!-- Title -->
            <h1 class="mt-4">@Model.Title</h1>
            <!--  -->
            <p >
                <b>Kategori :</b><a href="#">@Model.Category.Name</a>
                <b>Tarih:</b> @Model.CreatedDate 
            <b>@Model.ReadingTime</b> dk okuma süresi
            </p>
            <hr>
            <div style="text-align:center;">
            <img class="img-fluid rounded" src="@Model.FeaturedImageUrl" alt="">

            </div>
            <hr>
            <!-- Post Content -->

            @Html.Raw(Model.Content)
            <hr>
        </div>

    </div>
</div>

@section postScripts{
}