@model NitelikliBilisim.Core.ViewModels.areas.admin.blog.blogpost.BlogPostAddGetVM
@{
    ViewData["Title"] = "Yeni Yazı";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/vendor\select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/sup/alert-sup.css" rel="stylesheet" />
    <link href="~/css/lib/file-uploader.css" rel="stylesheet" />
<style>
    .ck-editor__editable {
        min-height: 500px !important;
    }
</style>
}
@section alerts{
    <partial name="partials/_Alert" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Yeni Yazı Ekle</h2>
        <button id="btn-save" class="btn btn-sm btn-outline-primary pull-right"><i class="fa fa-save"></i>Kaydet</button>
    </div>
    <form id="form-add-education">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" id="input-title">
                </div>
                <div class="form-group">
                    <label>Yazı</label>
                    <textarea id="editor"></textarea>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Kategori Seçiniz</label>
                    <select id="select-categories" class="form-control">
                        @foreach (var category in Model.BlogCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Etiketlerini Seçiniz</label>
                    <select id="select-tags" multiple="multiple" class="form-control">
                    </select>
                </div>
                <div class="form-group">
                    <label>Öne Çıkarılan Görsel</label>
                    <div class="file-upload-container-blog-post-image" id="file-upload-container-for-banner">
                        <img class="img-after-preview-with-blog-post-image" id="img-after-preview-for-banner" />
                        <p><i class="fa fa-file"></i> Resim yüklemek için tıklayınız...</p>
                        <input type="file" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section postScripts{
    <script src="~/vendor\select2/dist/js/select2.min.js"></script>
    <script src="~/js/sup/alert-sup.js"></script>
    <script src="~/js/lib/security-support.js"></script>
    <script src="~/js/lib/file-uploader.js"></script>
    <script src="~/ckeditor5/ckeditor.js"></script>
    <script src="~/ckeditor5/translations/tr.js"></script>
    <script src="~/js/areas/admin/admin-blog-post-add.js"></script>
}