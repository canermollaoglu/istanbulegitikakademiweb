@model NitelikliBilisim.App.Areas.Admin.Models.Category.UpdateGetVm
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/vendor\select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/lib/file-uploader.css" rel="stylesheet" />
    <style>
        .popular-technology__icon {
            width: 55px;
            height: 55px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            position: relative;
            z-index: 1
        }

        span.icon-outer {
            position: relative;
            top: -2px;
            font-size: 20px
        }

        .icon {
            display: inline-block;
            width: 1em;
            height: 1em;
            stroke-width: 0;
            stroke: currentColor;
            fill: currentColor;
            color: white;
        }
    </style>
}
@section alerts{
    <partial name="partials/_Alert" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Kategori Güncelle</h2>
        <input type="hidden" value="@Model.Category.Id" id="_category-id" />
    </div>
    <form id="form-add-category">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Kategori İsmi</label>
                    <input type="text" class="form-control" placeholder="Kategori İsmi" id="input-name" value="@Model.Category.Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Üst Kategori Seçiniz</label>
                    <select id="select-base-categories" class="form-control">
                        <option value="">Üst kategorisi yok</option>
                        @foreach (var item in Model.Categories)
                        {
                            if (Model.BaseCategory != null && Model.BaseCategory.Id == item.Id)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Seo Url   <i title="- dışında özel karakter girmeyiniz.Tamamen küçük harf olacak şekilde Türkçe karakter kullanmadan oluşturunuz." class="fa fa-question-circle"></i></label>
                            <input type="text" placeholder="dot-net-core-mvc-egitimi" class="form-control" id="input-seo-url" value="@Model.Category.SeoUrl">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Sıra <i title="Menü'de kategorinin görüntülenme sırası" required class="fa fa-question-circle"></i></label>
                            <input type="number" placeholder="3" class="form-control" id="input-order" value="@Model.Category.Order">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6" @(Model.BaseCategory != null ? "style=display:none;" : "")>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>İkon Url   </label>
                            <input type="text" placeholder="Yalnızca ikon ismini giriniz." class="form-control" id="input-icon-url" value="@Model.Category.IconUrl">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>İkon Renk Kodu</label>
                            <input type="text" class="form-control" id="input-color-code" value="@Model.Category.IconColor">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Wizard Class</label>
                            <input type="text" class="form-control" id="input-wizard-class" value="@Model.Category.WizardClass">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-6" @(Model.BaseCategory != null ? "style=display:none;" : "")>
                <div class="form-group">
                    <label>Eğitim Gün Sayısı</label>
                    <input type="text" class="form-control" id="input-educationdaycount" value="@Model.Category.EducationDayCount">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Kategori Açıklaması</label>
                    <textarea id="input-description" rows="5" class="form-control" style="height:100px;" placeholder="Kategori açıklaması kullanıcılar tarafından görülmeyecektir. Yalnızca admin panelde görülebilir...">@Model.Category.Description</textarea>
                </div>
            </div>
        </div>
        <div class="row" id="div-description2" @(Model.BaseCategory == null ? "style=display:none;" : "")>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea id="input-description2" rows="5" class="form-control">@Model.Category.Description2</textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Arkaplan Görseli</label>
                            <div class="file-upload-container" id="file-upload-container-for-banner">
                                <img src="@Model.Category.BackgroundImageUrl" class="img-after-preview" id="img-after-preview-for-banner" />
                                <p><i class="fa fa-file"></i> Resim yüklemek için tıklayınız...</p>
                                <input type="file" />
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>İkon</label>
                            <div class="file-upload-container" id="file-upload-container-for-preview">
                                <img src="@Model.Category.IconUrl" class="img-after-preview" id="img-after-preview-for-preview" />
                                <p><i class="fa fa-file"></i> Resim yüklemek için tıklayınız...</p>
                                <input type="file" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

<div class="row mt-5 box_general padding_bottom">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-2">

                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-azure"></use>
                        </svg>
                    </span>
                </div>
                icon-azure
            </div>
            <div class="col-md-2">
                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-window-code"></use>
                        </svg>
                    </span>
                </div>
                icon-window-code
            </div>
            <div class="col-md-2">
                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-system-network"></use>
                        </svg>
                    </span>
                </div>
                icon-system-network
            </div>
            <div class="col-md-2">
                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-microsoft-azure"></use>
                        </svg>
                    </span>
                </div>
                icon-microsoft-azure
            </div>
            <div class="col-md-2">
                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-unity"></use>
                        </svg>
                    </span>
                </div>
                icon-unity
            </div>
            <div class="col-md-2">
                <div class="popular-technology__icon" style="background: #0072cd;">
                    <span class="icon-outer">
                        <svg class="icon">
                            <use xlink:href="../../assets/img/icons.svg#icon-dynamics"></use>
                        </svg>
                    </span>
                </div>
                icon-dynamics
            </div>
        </div>
    </div>


</div>
<p><button id="btn-save" class="btn_1 medium">Kaydet</button></p>
@section postScripts{
    <script src="~/vendor\select2/dist/js/select2.min.js"></script>
    <script src="~/js/lib/file-uploader.js"></script>
    <script src="~/js/areas/admin/admin-category-update.js"></script>
}