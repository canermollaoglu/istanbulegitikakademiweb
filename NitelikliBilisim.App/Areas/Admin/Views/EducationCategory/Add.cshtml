@model NitelikliBilisim.App.Areas.Admin.Models.Category.AddGetVm
@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/sup/alert-sup.css" rel="stylesheet" />
}
@section alerts{
    <partial name="partials/_Alert" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Kategori Ekle</h2>
    </div>
    <form id="form-add-category">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Kategori İsmi</label>
                    <input type="text" class="form-control" placeholder="Kategori İsmi" id="input-name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Üst Kategori Seçiniz</label>
                    <select id="select-base-categories" class="form-control">
                        <option value="">Üst kategorisi yok</option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Slogan</label>
                    <textarea id="input-description" rows="5" class="form-control"  placeholder="Tek cümlelik bir slogan girilmelidir. Eğitim listesi sayfasında Kategori Adı altında görüntülenir."></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Kategori Tipini Seçiniz</label>
                            <select id="select-category-types" class="form-control">
                                @foreach (var item in Model.Types)
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12" id="div-educationdaycount">
                        <div class="form-group">
                            <label>Eğitim Gün Sayısı</label>
                            <input type="number" class="form-control" id="input-educationdaycount" />
                        </div>
                    </div>
                </div>
             
            </div>
            
        </div>
    </form>
</div>

<p><button id="btn-save" class="btn_1 medium">Kaydet</button></p>
@section postScripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    <script src="~/js/sup/alert-sup.js"></script>
    <script src="~/js/lib/security-support.js"></script>
    <script src="~/js/areas/admin/admin-category-add.js"></script>
}