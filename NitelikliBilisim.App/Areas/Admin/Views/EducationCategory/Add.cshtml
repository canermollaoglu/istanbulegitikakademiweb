@model NitelikliBilisim.App.Areas.Admin.Models.Category.AddGetVm
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Bilgiler</h2>
    </div>
    <form id="form-add-category">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Kategori İsmi</label>
                    <input type="text" class="form-control" placeholder="Kategori İsmi">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Üst Kategori Seçiniz</label>
                    <select id="select-base-categories" class="form-control">
                        <option value="0">Üst kategorisi yok</option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Kategori Açıklaması</label>
                    <textarea rows="5" class="form-control" style="height:100px;" placeholder="Kategori açıklaması kullanıcılar tarafından görülmeyecektir. Yalnızca admin panelde görülebilir..."></textarea>
                </div>
            </div>
        </div>
    </form>
</div>

<p><button id="btn-save" class="btn_1 medium">Kaydet</button></p>
@section postScripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    <script>
        var selectBaseCategories = document.getElementById("select-base-categories");

        $(document).ready(document_onLoad);

        function document_onLoad() {
            //$(selectBaseCategories).select2();
            $("#select-base-categories").select2();
        }
    </script>
}