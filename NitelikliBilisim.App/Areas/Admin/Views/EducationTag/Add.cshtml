@model NitelikliBilisim.Core.ViewModels.areas.admin.education_tags.AddGetVm
@{
    ViewData["Title"] = "Etiket Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
}
@section alerts{
    <partial name="partials/_Alert" />
}
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>Etiket Ekle</h2>
    </div>
    <form id="form-add-category">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Etiket İsmi</label>
                    <input type="text" class="form-control" placeholder="Etiket İsmi" id="input-name">
                </div>
            </div>
            @*<div class="col-md-6">
                <div class="form-group">
                    <label>Üst Etiket Seçiniz</label>
                    <select id="select-base-categories" class="form-control">
                        <option value="">Üst etiketi yok</option>
                        @foreach (var item in Model.Tags)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>*@
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Etiket Açıklaması</label>
                    <textarea id="input-description" rows="5" class="form-control" style="height:100px;" placeholder="Etiket açıklaması kullanıcılar tarafından görülmeyecektir. Yalnızca admin panelde görülebilir..."></textarea>
                </div>
            </div>
        </div>
    </form>
</div>

<p><button id="btn-save" class="btn_1 medium">Kaydet</button></p>
@section postScripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    <script src="~/js/areas/admin/admin-education-tag-add.js"></script>
}