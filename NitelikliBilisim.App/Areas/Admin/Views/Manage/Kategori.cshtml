            },
            {
               dataField: "createdDate",
               caption: "Kayıt tarihi",
               dataType: 'datetime',
               format: 'dd/MM/yyyy HH:mm',
               allowUpdating: false,
               allowEditing: false,
            },
            {
               dataField: "updatedDate",
               caption: "Güncellenme tarihi",
               dataType: 'datetime',
               format: 'dd/MM/yyyy HH:mm',
               allowUpdating: false,
               allowEditing: false,
