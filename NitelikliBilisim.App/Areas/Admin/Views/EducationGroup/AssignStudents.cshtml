
@{
    ViewData["Title"] = "Gruba Öğrenci Ata";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-list"></i> <strong>{GroupName}</strong> Grubuna Öğrenci Ata
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tr>
                        <th>Grup Adı</th>
                        <td>{GroupName}</td>
                    </tr>
                    <tr>
                        <th>Başlangıç Tarihi</th>
                        <td>{StartDate}</td>
                    </tr>
                    <tr>
                        <th>Eğitim</th>
                        <td>{Education.Name}</td>
                    </tr>
                    <tr>
                        <th>Eğitmen</th>
                        <td>{Educator.Name} {Education.Surname}</td>
                    </tr>
                    <tr>
                        <th>Konum</th>
                        <td>{Host.City}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-assigned">
                            <!--foreach group students-->
                            <tr>
                                <td>Test</td>
                                <td>Test</td>
                                <td><button class="btn btn-danger"><i class="fa fa-minus"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-tickets">
                            <!--foreach available ticket holders-->
                            <tr>
                                <td>Test</td>
                                <td>Test</td>
                                <td><button class="btn btn-success"><i class="fa fa-plus"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer small text-muted">Veri tarihi: @DateTime.Now</div>
</div>