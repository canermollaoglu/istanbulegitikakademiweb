
@{
    ViewData["Title"] = "Grup Gider Tipleri Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles{
}
@section alerts{
    <partial name="partials/_Alert" />
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Grup Gider Tipleri
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="card-header">
                     Gider Tipi Ekle
                </div>
                <div class="card-body">
                    <form id="form-add-group-expense-type">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Gider Tipi</label>
                            <input type="text" required class="form-control" id="input-name">
                        </div>
                        <div class="form-group">
                            <label>Açıklaması</label>
                            <textarea type="text" required rows="4" class="form-control" id="input-description"></textarea>
                        </div>
                        <button id="btn-save" type="button" class="btn btn-outline-success btn-sm pull-right">Kaydet</button>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-header">
                     Gider Tipi Listesi
                </div>
                <div class="card-body">
                    <div id="group-expense-type-grid"></div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-footer small text-muted">Veri tarihi: @DateTime.Now</div>
</div>

@section postScripts{
    <script src="~/js/areas/admin/admin-group-expense-type-list.js"></script>
}